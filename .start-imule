#!/bin/bash

# Set icon for .desktop file
mv imule.desktop imule.desktop-bak
sed -e "s,Icon=.*,Icon=$PWD/App/AppInfo/imule.xpm,g" imule.desktop-bak > imule.desktop
rm imule.desktop-bak
chmod u+x imule.desktop

if [ ! -f ./Data/i2p.pid ]; then
            xterm -hold -e echo "Please start I2P first"
            exit 1
        else
            echo "i2p.pid found, assuming I2P is running.."
            echo "Launching iMule"
            cd ./App/imule
            ./imule --config-dir=../../Data/imule
fi
